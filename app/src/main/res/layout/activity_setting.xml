<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.air.cryptocurrency.ui.setting_screen.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/choice_currency"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="USD"
            android:background="@null"
            android:id="@+id/usd_btn"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="EUR"
            android:background="@null"
            android:id="@+id/eur_btn"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="CNY"
            android:background="@null"
            android:id="@+id/cny_btn"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/choice_currency"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/value_limit"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/seek_bar_limit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/value_limit" />

</android.support.constraint.ConstraintLayout>
